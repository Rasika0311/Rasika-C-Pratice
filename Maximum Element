Maximum Element

#include<iostream>
using namespace std;
int max(int n)
{
    int a[n];
    for(int j=0;j<n;j++)
    {
        cin>>a[j];
    }
    for(int i=0;i<n;i++)
    {
        if(a[0]<a[i])
        {
            a[0]=a[i];
        }
    }
    return a[0];
}
int main()
{
    int n;
    cin>>n;
    cout<<"The maximum element in the array is "<<max(n);
}
