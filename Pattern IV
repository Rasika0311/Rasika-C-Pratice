Pattern IV

#include<iostream>
using namespace std;
int main()
{
    int n,i,j,k,a=20;
    cin>>n;
    for(i=1;i<=n;i++)
    {
        for(k=a;k>=i;k--)
        {
            cout<<" ";
        }
        for(j=1;j<=2*i-1;j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
    
    
}
