Pattern VI

#include<iostream>
using namespace std;
int main()
{
    int n,k,i,j;
    cin>>n;
    for(i=0;i<=n;i++)
    {
        for(j=n-i;j>0;j--)
        {
            cout<<" ";
            for(k=1;k<=((2*i)-1);k++)
            {
                cout<<"*";
            }
            cout<<endl;
        }
    }
    
    
}
