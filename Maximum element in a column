Maximum element in a column

#include<iostream>
using namespace std;
int main()
{
     int r,c,i,j,s=0;
     cin>>r>>c;
     int a[r][c];
     for(i=0;i<r;i++)
     {
         for(j=0;j<c;j++)
         {
            cin>>a[j][i];
         }
     }
     for(i=0;i<r;i++)
     {
         for(j=0;j<c;j++)
         {
            if(a[i][j]>s)
            {
                s=a[i][j];
           
            }
         } cout<<s<<endl;
         s=0;
     }
         
         
}
