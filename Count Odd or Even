Count Odd or Even

#include<iostream>
using namespace std;
int main()
{
    int n,i,b=0,c=0;
    cin>>n;
    int a[n];
    for(i=0;i<n;i++)
    {
        cin>>a[i];
        if(a[i]%2==0)
        {
            b++;
        }
        else
        {
            c++;
        }
    }
   cout<<"Odd:"<<c<<endl;
   cout<<"Even:"<<b;
}
