Array Type

#include<iostream>
using namespace std;
int main()
{
    int a,i,even=0,odd=0;
    cin>>a;
    int n[a];
    for(i=0;i<a;i++)
    {
       cin>>n[i];
    
       if(n[i]%2==0)
       {
           even++;
       }
       else
       {
           odd++;
       }
    }
    if(even>0 && odd==0)
    {
        cout<<"Even";
    }
       else if(odd>0 && even==0)
       {
           cout<<"Odd";
       }
       else
       {
           cout<<"Mixed";
       }
    
}
