Harshard Number

#include<iostream>
using namespace std;
int main()
{
    int a,tot=0,b=0,i,c,d;
    cin>>a;
    c=a;
    d=a;
    while(c>0)
    {
        c=c/10;
        tot++;
    }
    for(i=0;i<=tot;i++)
    {
        b=d%10;
        b++;
        b=d/10;
    }
    if(b%a==0)
    {
        cout<<"Harshard number";
    }
    else
    {
        cout<<"Not Harshard Number";
    }
}
