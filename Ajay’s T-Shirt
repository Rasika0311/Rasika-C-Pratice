Ajayâ€™s T-Shirt

#include<iostream>
using namespace std;
int main()
{
    int a,b,c,d,e,f,g,h,i;
    cin>>a>>b>>c>>d>>e>>f>>g>>h>>i;
    int x,y,z;
    int u,v,w;
    x= (a*b/100);
    y= (d*e/100);
    z= (g*h/100);
    u= (a-x)+c;
    v= (d-y)+f;
    w= (g-z)+i;
    cout<<"In Flipkart Rs."<<u<<endl;
    cout<<"In Snapdeal Rs."<<v<<endl;
    cout<<"In Amazon Rs."<<w<<endl;
    
    if(u<v && u<w)
    {
        cout<<"He will prefer Flipkart";
    }
    else if(v<u && v<w)
    {
        cout<<"He will prefer Snapdeal";
    }
    else if(w<u && w<v)
    {
        cout<<"He will prefer Amazon";
    }
    return 0;
}
