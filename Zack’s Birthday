        case 11:
        a=(amt-(amt*30)/100);
        printf("Zack's father needs to pay Rs. %.2f",a);
        break;
        case 10:
        a=(amt-(amt*30)/100);
        printf("Zack's father needs to pay Rs. %.2f",a);
